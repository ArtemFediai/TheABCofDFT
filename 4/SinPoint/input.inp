&GLOBAL
  PROJECT                 13_0_CNT-3periods
  RUN_TYPE                ENERGY
  PRINT_LEVEL             LOW
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
    &DFT
      BASIS_SET_FILE_NAME BASIS_MOLOPT
      POTENTIAL_FILE_NAME GTH_POTENTIALS 
      &MGRID
        NGRIDS            4
        CUTOFF            300
        REL_CUTOFF        30
      &END MGRID
      &XC:
        &XC_FUNCTIONAL PADE
        &END XC_FUNCTIONAL
      &END XC
      &SCF
        SCF_GUESS         ATOMIC
        EPS_SCF           1.0E-5
        MAX_SCF           300
        &DIAGONALIZATION  ON
          ALGORITHM       STANDARD
        &END DIAGONALIZATION
        &SMEAR
          METHOD                 FERMI_DIRAC
          ELECTRONIC_TEMPERATURE 300
        &END SMEAR
        ADDED_MOS         500
        &MIXING
          METHOD          BROYDEN_MIXING
          ALPHA           0.5
          BETA            0.3
        &END MIXING
      &END SCF
    &PRINT
     &AO_MATRICES
       OVERLAP
       KOHN_SHAM_MATRIX
       FILENAME           =./matrices.ao
       &EACH 
         QS_SCF -1
       &END EACH
     &END AO_MATRICES
     &MULLIKEN 
       FILENAME 
     &END MULLIKEN
    &END PRINT
  &END DFT
  &SUBSYS
    &KIND                 C
      ELEMENT             C
      BASIS_SET           SZV-MOLOPT-GTH
      POTENTIAL           GTH-PADE-q4
    &END KIND
    &CELL
      ABC                 25 12.78 25
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT   XYZ
      COORD_FILE_NAME     13_0_CNT-3periods.xyz
    &END TOPOLOGY
    !&COORD
    !&END COORD
  &END SUBSYS
&END FORCE_EVAL
